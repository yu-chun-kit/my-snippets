snippet snackbars "Description" b
body {
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100vh;
	background: url(BG.jpg) 50% 50% no-repeat;
	background-size: cover;
	display: table;
	text-align: center;
	font-family: Source Sans Pro;
}

h1 {
	color: #fff;
	/*color: #000;*/
	font-size: 70px;
	/*font-weight: lighter;*/
}

button {
	width: 300px;
	height: 50px;
	border: 2px solid #fff;
	/*border: 2px solid #000;*/
	font-weight: 300;
	color: #fff;
	/*color: #000;*/
	background: rgba(0, 0, 0, 0);
	/*background: rgba(255, 255, 255, 0);*/
	font-size: 20px;
	cursor: pointer;
}

#snackbar {
	min-width: 300px;
	margin-left: -150px;
	visibility: hidden;
	bottom: 30px;
	left: 50%;
	z-index: 1;
	text-align: center;
	font-size: 25px;
	position: absolute;
	padding: 16px;
	color: #000;
	/*color: #fff;*/
	background: #fff;
	/*background: #000;*/
	border-radius: 5px;
}

#snackbar.show {
	visibility: visible;
	animation: fadein 0.5s, fadeout 0.5s 2.5s;
}

@keyframes fadein {
	from {
		bottom: 0;
		opacity: 0;
	}
	to {
		bottom: 30px;
		opacity: 1;
	}
}
@keyframes fadeout {
	from {
		bottom: 30px;
		opacity: 1;
	}
	to {
		bottom: 0;
		opacity: 0;
	}
}
endsnippet

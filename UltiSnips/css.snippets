snippet '(\w+)\[(.*?)\]' "Emmet like tag expansion" r
`!p
tag = match.group(1)
attributes = ""
values = [w.split("=") for w in match.group(2).split(",")]
attributes = " " + " ".join('%s="%s"' % (k,v) for k,v in values)
snip.rv = "<%s%s></%s>" % (tag, attributes, tag)`
endsnippet
snippet c "Description" b
color: ${1:#000};${0}
endsnippet

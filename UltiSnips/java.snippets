endsnippet
snippet sop
System.out.println("${0}");
endsnippet
snippet fori "1.count 2.i 3.++" b
for (int ${2:i} = 0; $2 < ${1:count}; $2${3:++}) {
	${4:${VISUAL}}
}
endsnippet
